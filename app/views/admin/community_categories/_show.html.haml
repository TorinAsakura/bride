.sv-aside
  .title-browns
    .sv-choice.sv-l
      %ul
        %li
          %span.center Список клубов
    =link_to '', communities_new_admin_community_category_path(@community_category), remote: true, class: 'sv-task-title-new sv-r'
  .sv-admin-box.sv-tasks-box
    %ol#sv-admin-communities__list{'data-url' => order_communities_admin_community_category_path(@community_category.id) }
      - communities.each do |community|
        %li{'data-id' => community.id}
          .borders
            .vis
              .check
              = link_to community.name, edit_admin_community_path(community), remote: true, class: 'name'

              = link_to '', admin_community_path(community, category_id: community_category.id), method: 'delete', 
                confirm: 'Точно удалить?', class: 'sv-r sv-admin-task-remove'
