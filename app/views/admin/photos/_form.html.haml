= simple_form_for @photo, url: (@photo.new_record? ? admin_photos_path : admin_photo_path(@photo)) do |f|

  = f.input :description, input_html: { placeholder: 'Описание', class: 'description' }

  .image-field
    = image_tag @photo.path
    = f.input :path, :required => @photo.path.blank? ? true : false

  .tags-field
    %label Введите теги
    = render 'tags/input', f: f, tags: @photo.tags

  = link_to 'Удалить', admin_photo_path(@photo), method: :delete, confirm: 'Вы уверены?', class: 'btn' unless @photo.new_record?
  %button.link-style Сохранить
