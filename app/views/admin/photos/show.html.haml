.sv-admin-photo-sub-menu
  = link_to 'Список фотографий', admin_photos_path, class: 'link-style'
  = link_to 'Редактировать фотографию', edit_admin_photo_path(@photo), class: 'link-style'

.sv-admin-photos
  .photo.clearfix
    = link_to admin_photo_path(@photo), class: 'preview-photo' do
      = image_tag @photo.path.thumb

    .about
      .description
        %span Описание:
        = @photo.description
      - unless @photo.tags.blank?
        .tags
          %span Теги:
          = @photo.tags.join(', ')

    .action-block
      .edit-link= link_to 'Редактировать', edit_admin_photo_path(@photo)
      .remove-link= link_to 'Удалить', admin_photo_path(@photo), confirm: 'Вы уверены?', method: :delete
