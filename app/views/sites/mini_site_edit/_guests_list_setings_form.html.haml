          = radio_button_tag 'guest-check[1]', 'man', false, id: 'man1', class: 'radio-style-man'
          = label_tag 'man1'
        .sv-l.mr10
          = radio_button_tag 'guest-check[1]', 'girl', false, id: 'girl1', class: 'radio-style-girl'
          = label_tag 'girl1'

      .drink-level.sv-r= select_tag :guest_drink, options_for_select(['Пьет', 'Пьет умеренно', 'Не пьет'], 'Пьет умеренно'), class: 'select-level', include_blank: true

    = link_to 'Добавить гостя', '#', class: 'add-guest'

