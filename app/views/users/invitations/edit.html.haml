#sv-invitation-accept
  %h1.title Подтвердите регистрацию
  = simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
    = devise_error_messages!
    = f.hidden_field :invitation_token
    = f.input :login, input_html: {class: 'input-big'}
    = f.input :password, input_html: {class: 'input-big'}
    = f.input :password_confirmation, input_html: {class: 'input-big'}
    = f.submit "Установить мой пароль", class: 'link-style input-big'
