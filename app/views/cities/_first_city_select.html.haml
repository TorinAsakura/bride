- content_for :javascripts do
  :javascript
    WeddingCitiesList.init('#change-first-city');
= render "cities/wedding_cities_filters", items: items
.items#city-items
  - items.group_by(&:name_index).each do |i, items|
    .city-group.item{data: {item: i}}
      %h5= i
      %ul
        - items.each do |item|
          %li.city-item{id: dom_id(item), class: ('hidden' if ids.include?(item.id)), data: { country: item.country.id } }= link_to item.name, '#', title: item.full_name, data: {id: item.id}