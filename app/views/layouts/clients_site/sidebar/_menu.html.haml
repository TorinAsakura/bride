%ul.nav.nav-pills.nav-stacked.aside-item.tab-menu
  - pages.ordered.decorate.each do |page|
    %li
      = link_to( minisite_page_path(page.name), class: action?(page.name)) do
        = icon(page.icon, page.title, class: 'icon-sm')

  - unless site.ideas.blank?
    %li
      = link_to(minisite_my_ideas_ideas_path, class: action?('my_ideas')) do
        = icon('lightbulb', t('.ideas'), class: 'icon-sm')

  - unless site.guests.blank? || Rails.configuration.skip_minisite_services
    %li
      = link_to(minisite_guests_path, class: action?('guests')) do
        = icon('users', t('.guests').html_safe, class: 'icon-sm')
        %span.badge= site.guests.count

  - unless site.seating_plan.blank? || Rails.configuration.skip_minisite_services
    %li
      = link_to(minisite_seating_plan_path, class: action?('seating_plan')) do
        = icon('flag', t('.seating_plan'), class: 'icon-sm')

  - unless Rails.configuration.skip_minisite_services
