      = link_to('#events', class: action?('events')) do
        = icon('heart-empty', t('.events'), class: 'icon-sm')

  - unless site.wishlists.blank? || Rails.configuration.skip_minisite_services
    %li
      = link_to('#wishlists', class: action?('wishlists')) do
        = icon('gift', t('.wishlists'), class: 'icon-sm')
      -#minisite_wishlists_path

  - unless site.wedding_calc.blank? || Rails.configuration.skip_minisite_services
